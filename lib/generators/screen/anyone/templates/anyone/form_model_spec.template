require "rails_helper"

RSpec.describe <%= anyone_class_name %>Form do
  describe "validations" do
    context "when <%= anyone_model_method %> is provided" do
      it "is valid" do
        form = <%= anyone_class_name %>Form.new(
          nil,
          <%= anyone_model_method %>: "yes",
        )

        expect(form).to be_valid
      end
    end

    context "when <%= anyone_model_method %> is not provided" do
      it "is invalid" do
        form = <%= anyone_class_name %>Form.new(
          nil,
          <%= anyone_model_method %>: "unfilled",
        )

        expect(form).not_to be_valid
        expect(form.errors[:<%= anyone_model_method %>]).to be_present
      end
    end
  end

  describe "#save" do
    let(:interview) { create :interview }

    let(:valid_params) do
      {
        <%= anyone_model_method %>: "yes",
      }
    end

    it "persists the values to the correct models" do
      form = <%= anyone_class_name %>Form.new(interview, valid_params)
      form.valid?
      form.save

      interview.reload

      expect(form.<%= anyone_model_method %>).to eq("yes")
    end
  end

  describe ".from_interview" do
    it "assigns values from interview" do
      interview = create(:interview, <%= anyone_model_method %>: "no")

      form = <%= anyone_class_name %>Form.from_interview(interview)

      expect(form.<%= anyone_model_method %>).to eq("no")
    end
  end
end
