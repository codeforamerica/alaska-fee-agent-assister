<% content_for :card_title, "Let's review some of the important details." %>

<% content_for :card_body do %>
  <div class="vertical-steps text--centered">
    <div class="vertical-steps__step">
      <h3>Fee agent details</h3>
      <%= current_interview.fee_agent_name %><br>
      <%= current_interview.fee_agent_email %><br>
      <%= format_phone_number(current_interview.fee_agent_phone_number) %>
    </div>
    <div class="vertical-steps__step">
      <h3>Applicant details</h3>
      <%= current_interview.client_name %><br>
      XXX-XX-<%= current_interview.client_last_four_ssn %>
    </div>
    <div class="vertical-steps__step">
      <h3>This <%= application_or_renewal %> is for</h3>
      <%= "SNAP<br>".html_safe if current_interview.selected_snap %>
      <%= "Medicaid<br>".html_safe if current_interview.selected_medicaid %>
      <%= "General Relief<br>".html_safe if current_interview.selected_general_relief %>
      <%= "Alaska Temporary Assistance<br>".html_safe if current_interview.selected_atap %>
      <%= "Adult Public Assistance<br>".html_safe if current_interview.selected_apa %>
      <%= "CAMA" if current_interview.selected_cama %>
    </div>
  </div>
<% end %>
