<% content_for :content do %>
    <div class="slab">
      <main id="main" class="form-card form-card--transition">
        <header class="form-card__header form-card__header--confirmation">
          <%= yield :card_illustration %>
          <h1 class="form-card__title">
            <%= yield :card_title %>
          </h1>
        </header>

        <div class="form-card__content text--centered">
          <%= yield :card_body %>
        </div>
      </main>
    </div>
<% end %>

<%= render template: 'layouts/application' %>
