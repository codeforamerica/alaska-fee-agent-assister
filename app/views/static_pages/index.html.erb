<% content_for :homepage, true %>

<% content_for :content do %>
  <section class="slab slab--hero">
    <div class="grid">
      <div class="grid__item">
        <h1>Give your community the help it deserves.</h1>
        <p class="with-padding-med">As a fee agent, help others apply for services, interview, and submit proof.</p>
        <a href="#" class="button button--cta with-padding-med">Help someone now</a>
        <a href="#scroller-target" class="scroller scroller--light"><span class="sr-only">Skip to content</span></a>
      </div>
    </div>
  </section>
  <section class="slab slab--white slab--padded" id="scroller-target">
    <div class="grid">
      <div class="grid__item width-one-half shift-one-fourth">
        <div class="illustration illustration--cfa_alaska_logos"></div>
        <p>This service was built in partnership with the Alaska Department of Public Assistance by Code for America.</p>
      </div>
    </div>
  </section>
  <section class="slab slab--padded">
    <div class="grid with-padding-large">
      <div class="grid__item width-one-half shift-one-fourth">
        <h2>How it works.</h2>
      </div>
    </div>
    <div class="grid">
      <div class="grid__item width-one-third with-padding-large">
        <div class="illustration illustration--interview"></div>
        <h4>Conduct an interview.</h4>
        <p class="text--small">We'll guide you through step by step and automatically fill out an digital FA1 form.</p>
      </div>
      <div class="grid__item width-one-third with-padding-large">
        <div class="illustration illustration--proof"></div>
        <h4>Attach the GEN 50C form and verification docs.</h4>
        <p class="text--small">We'll help snap photos or upload the application and any relevant proof. The documents will not be saved on your device.</p>
      </div>
      <div class="grid__item width-one-third with-padding-large">
        <div class="illustration illustration--send"></div>
        <h4>Hit send!</h4>
        <p class="text--small">The GEN 50C application, FA1 form, and attached verifications will be securely sent to the DPA office within seconds.</p>
      </div>
    </div>
  </section>
<% end %>